        // 领导展示专用功能
        function setupLeadershipFeatures() {
            // 调整内容区域间距
            adjustContentSpacing();

            // 演示模式
            const presentationBtn = document.getElementById('presentation-btn');
            let demoScrollActive = false;
            let demoScrollDirection = 'down';
            let demoScrollInterval = null;
            function startDemoScroll() {
                demoScrollActive = true;
                demoScrollDirection = 'down';
                function stepScroll() {
                    if (!demoScrollActive) return;
                    const step = 2; // 每次滚动的像素
                    if (demoScrollDirection === 'down') {
                        if (window.scrollY + window.innerHeight < document.body.scrollHeight - 2) {
                            window.scrollBy(0, step);
                        } else {
                            demoScrollDirection = 'up';
                            setTimeout(stepScroll, 1200); // 到底部停留1.2秒
                            return;
                        }
                    } else {
                        if (window.scrollY > 2) {
                            window.scrollBy(0, -step);
                        } else {
                            demoScrollDirection = 'down';
                            setTimeout(stepScroll, 1200); // 到顶部停留1.2秒
                            return;
                        }
                    }
                    demoScrollInterval = setTimeout(stepScroll, 16); // 约60帧/秒
                }
                stepScroll();
            }
            function stopDemoScroll() {
                demoScrollActive = false;
                if (demoScrollInterval) clearTimeout(demoScrollInterval);
            }
            if (presentationBtn) {
                presentationBtn.addEventListener('click', function () {
                    const isActive = this.classList.contains('active');
                    if (isActive) {
                        this.classList.remove('active');
                        this.innerHTML = '<i class="fa fa-play mr-1"></i>演示模式';
                        //document.body.classList.remove('presentation-mode');
                        showNotification('演示模式已关闭', 'info');
                        stopDemoScroll();
                    } else {
                        this.classList.add('active');
                        this.innerHTML = '<i class="fa fa-pause mr-1"></i>演示模式';
                        //document.body.classList.add('presentation-mode');
                        showNotification('演示模式已开启', 'success');
                        startDemoScroll();
                    }
                });
            }

            // 导出报告功能
            const exportBtn = document.getElementById('export-btn');
            if (exportBtn) {
                exportBtn.addEventListener('click', function () {
                    this.innerHTML = '<i class="fa fa-spinner fa-spin mr-1"></i>导出中...';
                    this.disabled = true;

                    // 模拟导出过程
                    setTimeout(() => {
                        this.innerHTML = '<i class="fa fa-download mr-1"></i>导出报告';
                        this.disabled = false;
                        showNotification('报告导出成功！', 'success');

                        // 创建下载链接
                        const data = generateReportData();
                        const blob = new Blob([data], { type: 'text/html' });
                        const url = URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.href = url;
                        a.download = `岷县2024年经济统计报告_${new Date().toISOString().split('T')[0]}.html`;
                        document.body.appendChild(a);
                        a.click();
                        document.body.removeChild(a);
                        URL.revokeObjectURL(url);
                    }, 2000);
                });
            }
        }

        // 调整内容区域间距
        function adjustContentSpacing() {
            const header = document.querySelector('.header');
            const mainContent = document.getElementById('main-content');

            if (header && mainContent) {
                // 获取标题栏的实际高度
                const headerHeight = header.offsetHeight;

                // 设置足够的安全间距（标题栏高度 + 额外间距）
                const safePadding = 0; // 只加16px间距

                console.log('标题栏高度:', headerHeight, '设置间距:', safePadding);

                // 强制应用间距（使用setProperty确保优先级）
                mainContent.style.setProperty('padding-top', `${safePadding}px`, 'important');

                // 确保内容可见
                mainContent.style.setProperty('min-height', `calc(100vh - ${safePadding}px)`, 'important');

                // 添加调试信息
                console.log('已设置main-content的padding-top为:', mainContent.style.paddingTop);

                // 确保页面滚动到顶部
                window.scrollTo(0, 0);
            } else {
                console.error('未找到header或main-content元素');
            }
        }

        // 监听窗口大小变化，重新调整间距
        window.addEventListener('resize', adjustContentSpacing);

