            // 导航按钮点击事件
            navButtons.forEach(button => {
                button.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetSection = this.getAttribute('data-section');
                    console.log('点击导航按钮:', targetSection);

                    // 更新按钮状态
                    navButtons.forEach(btn => {
